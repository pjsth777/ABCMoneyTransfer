@model ABCMoneyTransfer_Project.Models.Transaction

<div class="container mt-4">
    <h2 class="text-center text-danger">Delete Transaction</h2>

    <p>Are you sure you want to delete this transaction?</p>
    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <p><strong>Sender:</strong> @Model.SenderFirstName @Model.SenderLastName</p>
            <p><strong>Receiver:</strong> @Model.ReceiverFirstName @Model.ReceiverLastName</p>
            <p><strong>Transfer Amount:</strong> @Model.TransferAmount.ToString()</p>
            <p><strong>Payout Amount:</strong> @Model.PayoutAmount.ToString()</p>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
